{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "url": {"type": "string", "minLength": 1},
    "mode": {"type": "string", "enum": ["crawl", "scrape"]},
    "max_pages": {"type": "integer", "minimum": 1},
    "formats": {
      "type": "array",
      "items": {"type": "string", "enum": ["markdown", "html", "text"]}
    }
  },
  "required": ["url"],
  "allOf": [
    {
      "if": {"required": ["max_pages"]},
      "then": {
        "properties": {
          "mode": {"const": "crawl"}
        },
        "required": ["mode"]
      }
    },
    {
      "if": {
        "properties": {
          "mode": {"const": "scrape"}
        },
        "required": ["mode"]
      },
      "then": {
        "not": {"required": ["max_pages"]}
      }
    }
  ],
  "additionalProperties": false
}
